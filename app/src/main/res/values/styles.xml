<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--toolbar Title text color-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--toolbar subtitle text color-->
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="Menus" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">@integer/product_item_text_max_lines</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="FloatingControls">
        <item name="android:layout_gravity">top|end</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">@dimen/product_item_view_margin</item>
        <item name="android:layout_marginEnd">@dimen/product_item_view_margin</item>
    </style>
    <style name="UserInfoFormIconStyle">
        <item name="android:layout_height">@dimen/image_button_icon_size</item>
        <item name="android:layout_width">@dimen/image_button_icon_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_userInfo_icon_end_margin</item>
    </style>
    <style name="UserInfoFormEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/activity_userInfo_editText_end_margin</item>
        <!--avoid full screen keyboard in landscape mode-->
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>
    <style name="AppTheme.CartButton" parent="Widget.AppCompat.Button">
        <item name="android:colorButtonNormal">@android:color/white</item>
    </style>
</resources>
