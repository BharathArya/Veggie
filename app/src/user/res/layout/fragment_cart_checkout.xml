<android.support.design.widget.CoordinatorLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.greentopli.app.user.ui.purchase.CartCheckoutFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cartItem_fragment_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/cartItem_fragment_empty_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_empty_cart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_gravity="center"/>
    <ProgressBar
        android:id="@+id/progressbar_cartCheckout_fragment"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:visibility="gone"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_cart_items_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward"
        android:tint="@color/cardview_light_background"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/activity_horizontal_margin"
        />
</android.support.design.widget.CoordinatorLayout>
