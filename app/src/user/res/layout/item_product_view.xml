<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/item_product_view_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/product_item_cardView_width"
    android:layout_height="@dimen/product_item_cardView_height"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:elevation="@dimen/cardview_default_elevation"
    tool:cardCornerRadius="@dimen/cardview_default_radius">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/item_product_image"
            android:layout_width="@dimen/product_item_icon_size"
            android:layout_height="@dimen/product_item_icon_size"
            android:src="@drawable/ic_photo_default"/>

        <TextView
            android:id="@+id/item_product_price"
            style="@style/TextStyle"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="@dimen/product_item_price_textSize"
            android:textColor="@color/colorAccent"
            tools:text="​₹ 150"/>

        <TextView
            android:id="@+id/item_product_name"
            style="@style/TextStyle"
            android:textSize="@dimen/product_item_name_textSize"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            tools:text="Lady Finger"/>

        <!--product volume control-->
        <RelativeLayout
            android:id="@+id/item_product_volume_controls"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/subtract_image_button"
                android:src="@drawable/ic_remove_circle_outline"
                android:layout_width="@dimen/volume_control_size"
                android:layout_height="@dimen/volume_control_size"
                android:scaleType="fitCenter"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/item_product_volume"
                style="@style/TextStyle"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="0.25 kg"/>

            <ImageButton
                android:id="@+id/add_image_button"
                android:src="@drawable/ic_add_circle_outline"
                android:layout_width="@dimen/volume_control_size"
                android:layout_height="@dimen/volume_control_size"
                android:scaleType="fitCenter"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"/>
        </RelativeLayout>
    </LinearLayout>
    <CheckBox
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:layout_gravity="top|end"
        android:id="@+id/item_product_checkbox"/>
</android.support.v7.widget.CardView>
